
  <div class="modal-body">
    <div class='modal-task-title'>
          {{input value=title}}
      <div class='modal-buttons'>
        <button {{action "toggleFromInside" id task}}> close </button>
        <button {{action 'toggleDelete' id task list}}> delete </button>
      </div>
      {{#if isShowingDeleteModal}}
        {{#modal-dialog renderInPlace=true}}
          {{confirm-delete id task list}}
        {{/modal-dialog}}
      {{/if}}
    </div>
    

		<div class="task-description">
      <br>
  		<h4>Description:</h4>
  		
	  		{{textarea value=description}}

		</div>

      {{!-- {{yield}} --}}
  </div>

