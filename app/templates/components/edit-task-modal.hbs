{{#if enabled}}
  <div class="modal-fog">
    <div class="modal-frame">
    	<button {{action 'closeModal'}}> close </button>
      <div class="modal-title">
        {{title}}
      </div>
      <div class="modal-body">

		 <form {{action 'ok' on='submit' target=view}}>
		    <div class="form-group">

	  		{{!-- <div class="description"> --}}
    		<span>Description:</span> 
    		{{!-- {{task.description}} --}}
		      <fieldset>
		  			{{input class="form-control" name="task description" value=task.description}}
					</fieldset>

  			</div>
  		</form>

        {{yield}}
      </div>
    </div>
  </div>
{{/if}}



