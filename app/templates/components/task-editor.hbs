<ul class="errors">
  {{#each errors as |error|}}
    <li>{{error.message}}</li>
  {{/each}}
</ul>

<fieldset>
  {{input name="task name" value=task.name change=(action "required")}}
  {{input name="task description" value=task.description change=(action "required")}}
</fieldset>

  <div class="description">
    <span>Number of description:</span> {{task.description}}
  </div>